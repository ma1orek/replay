{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/generate/**/*.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/upload-video/**/*.ts": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "crons": [
    {
      "path": "/api/aeo/cron",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/admin/content-cron",
      "schedule": "*/3 * * * *"
    }
  ]
}
